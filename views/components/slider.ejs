<div id="slider" class="carousel slide" data-bs-ride="true">
    <div class="carousel-indicators">
        <% sliderInfo.forEach((info, index) => { %>
            <% if(index == 0) { %>
                <button type="button" data-bs-target="#slider" data-bs-slide-to="<%= index %>" class="active" aria-current="true" aria-label="Slide <%=(index + 1)%>"></button>
            <% } %>
            <% if(index != 0) { %>
                <button type="button" data-bs-target="#slider" data-bs-slide-to="<%= index %>" aria-label="Slide <%=(index + 1)%>"></button>
            <% } %>
        <% }) %>
    </div>
    <div class="carousel-inner slider-container">

        <% sliderInfo.forEach((info, index) => { %>
            <% if(index == 0) { %>
                <div class="carousel-item active">
            <% } %>
            <% if(index != 0) { %>
                <div class="carousel-item">
            <% } %>
                <div class="slider-info">
                    <p class="slider-info-little-p"> <%= info.littleP %> </p>
                    <h1 class="slider-info-title"> 
                        <%= info.title1P %> 
                        <em class="slider-info-em"> <%= info.titleEm %> </em> 
                        <%= info?.title2P %>
                        <% if(info.titleEm2) { %>
                            <em class="slider-info-em"> <%= info.titleEm2 %> </em> 
                        <% } %>
                    </h1>
                    <p class="slider-info-p"> <%= info.p %> </p>
                    
                    <% if(index == 0) { %>
                        <a class="slider-info-span" href="/aforo"> <%= info.span %> </a>
                    <% } %>
                    <% if(index != 0) { %>
                        <span class="slider-info-span"> <%= info.span %> </span>
                    <% } %>
                </div>
                <div class="slider-img-container">
                    <img class="d-block w-100 slider-img" alt=""
                    src="<%= info.img %>">
                </div>
            </div>
        <% }) %>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#slider" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#slider" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>